apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: "{{ issuer_name }}"
  namespace: "{{ namespace }}"
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: "{{ email }}"
    privateKeySecretRef:
      name: "{{ issuer_name }}"
    solvers:
      - http01:
          ingress:
            class: "{{ ingress_class }}"

